# Production Environment Variables for Docker
# Copy this file to .env.prod and fill in your production values

# Application Configuration
APP_NAME="Ultimate POS"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ultimatepos_prod
DB_USERNAME=ultimatepos
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# Cache and Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com

# Security and License
ENVATO_PURCHASE_CODE=YOUR_PURCHASE_CODE
MAC_LICENCE_CODE=YOUR_LICENSE_CODE

# Payment Gateways (fill in your production credentials)
STRIPE_PUB_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_APP_SECRET=
PAYPAL_MODE=live

# Other services
GOOGLE_MAP_API_KEY=
OPENAI_API_KEY=

# Backup Storage (recommended for production)
BACKUP_DISK="s3"
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-backup-bucket